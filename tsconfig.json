{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@common/*": ["./src/common/*"],
      "@navigators/*": ["./src/navigators/*"],
      "@redux/*": ["./src/redux/*"],
      "@screens/*": ["./src/screens/*"],
      "@theme/*": ["./src/theme/*"],
      "@untils/*": ["./src/untils/*"],
      "@components/*": ["./src/components/*"],
      "@api/*": ["./src/api/*"],
      "@base/*": ["./src/base/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
